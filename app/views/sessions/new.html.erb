<% provide(:title, 'Log In') %>

<div class='col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2'>

	<ul class="nav nav-pills nav-justified" role='tablist' id='login-page-tabs'>
		<li>
			<%= link_to 'Log In', '#login', role: 'tab', 'data-toggle' => 'tab', id: 'login-tab-link' %>
		</li>
		<li class='active'>
			<%= link_to 'Register', '#register', role: 'tab', 'data-toggle' => 'tab' %>
		</li>
	</ul>

	<div class="tab-content">
		<div class="tab-pane fade in active" role='tabpanel' id='login'>
			<div class="page-header">
		    <h1>Log In</h1>
		  </div>
			<%= form_for(:session, url: login_path) do |f| %>

		    <%= f.label :email %>
		    <%= f.email_field :email, class: 'form-control', tabindex: 1 %>

		    <br>

		    <%= f.label :password %>
		    <%= link_to "(forgot password)", new_password_reset_url %>
		    <%= f.password_field :password, class: 'form-control', tabindex: 2 %>

		    <%= f.label :remember_me, class: 'checkbox inline' do %>
		      <%= f.check_box :remember_me, tabindex: 3 %>
		      <span>Keep me logged in</span>
		    <% end %>

		    <%= f.submit 'Log In', class: 'btn btn-primary btn-lg btn-block', tabindex: 4 %>
		  <% end %>
			<br>
			<p class='text-center'>
		    New to AppTrack? <a href='#' id='register-tab-button'>Register</a> your company here.
		  </p>
		</div>
		<div id="register" class="tab-pane fade" role='tabpanel'>
			<div class="page-header">
		    <h1>Register</h1>
		  </div>
			<%= form_for @company do |f| %>
				<%= render 'partials/error_messages', item: @company %>
				<div class="form-group">
					<%= f.label :name, 'Company Name' %>
					<%= f.text_field :name, class: 'form-control' %>
				</div>

				<%= f.fields_for :users do |u| %>
					<!-- <%= render 'partials/error_messages', item: @company %> -->
					<%= u.label :name, 'Your Name' %>
					<div class='row double-input-row'>
						<div class="col-md-6">
							<div class="form-group">
								<%= u.text_field :first_name, class: 'form-control col-md-6', placeholder: 'First Name' %>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<%= u.text_field :last_name, class: 'form-control col-md-6', placeholder: 'Last Name' %>
							</div>
						</div>
					</div>

					<%= u.label :email, 'Your Email' %>
					<div class="row">
						<div class="col-md-12">
							<div class="form-group">
								<%= u.email_field :email, class: 'form-control' %>
							</div>
						</div>
					</div>

					<%= u.label :password %>
					<div class='row double-input-row'>
						<div class="col-md-6">
							<div class="form-group">
								<%= u.password_field :password, class: 'form-control col-md-6', placeholder: 'Password' %>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<%= u.password_field :password_confirmation, class: 'form-control col-md-6', placeholder: 'Confirm Password' %>
							</div>
						</div>
					</div>
				<% end %>
				<br>
				<%= f.submit 'Register', class: 'btn btn-primary btn-lg btn-block' %>
				<br>
				<p class='text-center'>
					Already on AppTrack? <a href='#' id='login-tab-button'>Log in</a> to your account here.
				</p>
			<% end %>
			<%= debug @company %>
			<%= debug @company.users %>
		</div>
	</div>

</div>
